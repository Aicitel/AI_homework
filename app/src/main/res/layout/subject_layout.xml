<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/layout_backgroud"
    android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:fadeScrollbars="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent">


                <ImageView
                    android:layout_width="85dp"
                    android:layout_height="160dp"
                    android:id="@+id/figureView"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/figure_right_margin" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="submit"
                    android:id="@+id/submitButton"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/dialogueTextView" />

                <TextView
                    android:layout_width="600dp"
                    android:layout_height="200dp"
                    android:gravity="center"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="2+5=?"
                    android:id="@+id/problemTextView1"
                    android:textColor="#000000"
                    android:textSize="@dimen/question_size"
                    android:layout_above="@+id/userAnswerView"
                    android:layout_alignParentLeft="true" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:id="@+id/dialogueTextView"
                    android:background="@drawable/dialogue"
                    android:text="试试看?"
                    android:gravity="center"
                    android:textColor="#004fff"
                    android:layout_alignBottom="@+id/figureView"
                    android:layout_alignParentLeft="true" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="查看数据"
                    android:id="@+id/dataButton"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true" />

                <EditText
                    android:layout_width="120dp"
                    android:layout_height="60dp"
                    android:id="@+id/answerText"
                    android:layout_alignTop="@+id/figureView"
                    android:layout_alignParentLeft="true" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/tulingRobotImage"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/tulingrobot_unused" />

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:gravity="center"
                    android:text="[       ]"
                    android:textColor="#000000"
                    android:textSize="@dimen/question_size"
                    android:id="@+id/userAnswerView"
                    android:layout_above="@+id/figureView"
                    android:layout_toRightOf="@+id/dataButton" />

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>