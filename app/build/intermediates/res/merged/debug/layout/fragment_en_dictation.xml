<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#00000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="@dimen/subject_choose_width"
        android:layout_height="@dimen/blackboard_height"
        android:background="@drawable/blackboard"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="50dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/problemTextView"
            android:textColor="@color/white"
            android:layout_marginBottom="130dp"
            android:text="题目"
            android:textSize="25sp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/surfaceLayout"
        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <SurfaceView
            android:id="@+id/wordSurface1"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:background="@drawable/border_style"
            android:layout_alignBottom="@+id/wordSurface2"
            android:layout_centerHorizontal="true" />

        <SurfaceView
            android:id="@+id/wordSurface2"
            android:visibility="invisible"
            android:layout_width="150dp"
            android:layout_height="150dp"
            />

        <SurfaceView
            android:id="@+id/surface"
            android:layout_width="@dimen/subject_choose_width"
            android:layout_height="250dp"
            android:layout_marginTop="250dp"
            android:background="@drawable/border_style"
            android:layout_centerHorizontal="true" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/dictationButton"
            android:src="@drawable/dictationbutton"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="40dp"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>
</RelativeLayout><!-- From: file:/C:/Users/bluemaple/AndroidStudioProjects/SpeechDemo1/app/src/main/res/layout/fragment_en_dictation.xml -->